{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch files for linting",
			"runOptions": {"runOn": "folderOpen"},
			"group": "build",
			"type": "shell",
			"command": "scripts/startup/watcher.sh",
			"problemMatcher": "$rustc-watch",
			"isBackground": true,
			"presentation": {
				"echo": false,
				
				// These 2 params are so a terminal does not pop up when there is an error.
				// This was done because the errors alreay show up in the error section of
				// VSCode.
				"reveal": "never", 
				"revealProblems": "never",

				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
	]
}
